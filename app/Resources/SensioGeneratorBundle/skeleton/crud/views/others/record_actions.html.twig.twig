    <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}"><i class="fa fa-chevron-left"></i> Volver a la Lista</a>
        </li>

        {%- if ('edit' in actions) and (not hide_edit) %}

        <li>
            <a class="btn btn-success" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}"><i class="fa fa-pencil"></i> Edit</a>
        </li>

        {%- endif %}

        {%- if ('delete' in actions) and (not hide_delete) %}

        <li>
            {{ '{{ form_start(delete_form) }}' }}
                <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Eliminar</button>
            {{ '{{ form_end(delete_form) }}' }}
        </li>

        {%- endif %}

    </ul>
