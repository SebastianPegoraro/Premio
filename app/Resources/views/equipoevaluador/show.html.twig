{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title main-title">Equipo Evaluador: {{ equipoEvaluador }}</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-condensed">
                        <tbody>
                            <tr>
                                <th class="width-perc-20">Nombre del Equipo</th>
                                <td>{{ equipoEvaluador.nombre }}</td>
                            </tr>
                            <th class="width-perc-20">Evalua a</th>
                                <td>
                                    {{ equipoEvaluador.organizacion.nombre|upper }} [{{equipoEvaluador.organizacion.tipoOrganizacion}}]
                                </td>
                            </tr>
                            <th class="width-perc-20">Evaluadores integrantes</th>
                                <td>
                                    {% if equipoEvaluador.evaluadores|length %}
                                    <ul>
                                        {% for ep in equipoEvaluador.evaluadores %}
                                        <li>{{ ep.evaluador }}</li>
                                        {% endfor %}
                                    </ul>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <ul class="list-inline">
                <li>
                    <a class="btn btn-default" href="{{ path('admin_equipoevaluador_index') }}"><i class="fa fa-chevron-left"></i> Volver a la Lista</a>
                </li>
                <li>
                    <a class="btn btn-success" href="{{ path('admin_equipoevaluador_edit', { 'id': equipoEvaluador.id }) }}"><i class="fa fa-pencil"></i> Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Eliminar</button>
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>

    </div>
{% endblock %}
