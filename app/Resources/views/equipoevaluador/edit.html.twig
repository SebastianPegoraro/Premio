{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title main-title">
			    {{ edit_form.vars.value }}  <span style="font-size: 0.8em;">({{ edit_form.vars.value.premio }})</span>
			</h3>
		</div>
		<div class="panel-body">
            <div class="row">
                <div class="col-sm-12">
                {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <div class="text-right">
                        <button class="btn btn-success" type="submit" value="Edit" >
                            <i class="fa fa-pencil"></i> Actualizar
                        </button>
                    </div>
                {{ form_end(edit_form) }}
                </div>
            </div>
		</div>
	</div>
            <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('admin_equipoevaluador_index') }}"><i class="fa fa-chevron-left"></i> Volver a la Lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Eliminar</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}

{% block page_javascripts %}
    {% include ':equipoevaluador:form-javascripts.html.twig' with { 'form': edit_form } %}
{% endblock %}