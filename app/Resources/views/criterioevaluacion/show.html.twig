{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title main-title">Criterio de Evaluación: {{ criterioEvaluacion }}</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered table-condensed">
                        <tbody>
                            <tr>
                                <th class="width-perc-20">Nombre</th>
                                <td>{{ criterioEvaluacion.nombre }}</td>
                            </tr>
                            <tr>
                                {% if criterioEvaluacion.parent %}
                                    <th class="width-perc-20">Puntaje Máximo</th>
                                    <td>{{ criterioEvaluacion.puntajeMaximo }}</td>
                                {% else %}
                                    <th class="width-perc-20">Puntaje Total</th>
                                    <td>{{ criterioEvaluacion.puntajeMaximo }}</td>
                                {% endif %}
                            </tr>
                            {% if criterioEvaluacion.parent %}
                            <tr>
                                <th class="width-perc-20">Padre</th>
                                <td>{{ criterioEvaluacion.parent }}</td> 
                            </tr>
                            {% endif %}
                            <tr>
                                
                                {% if criterioEvaluacion.children|length %} 
                                    <th class="width-perc-20">Hijos</th>
                                    <td>
                                        <ul>
                                        {% for hijo in criterioEvaluacion.children %}    
                                        <li>{{ hijo.nombre }} ({{ hijo.puntajeMaximo }})</li>
                                        {% endfor %}
                                        </ul>                                   
                                    </td>                                   
                                {% endif %}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <ul class="list-inline">
                <li>
                    <a class="btn btn-default" href="{{ path('admin_criterioevaluacion_index') }}"><i class="fa fa-chevron-left"></i> Volver a la Lista</a>
                </li>
                <li>
                    <a class="btn btn-success" href="{{ path('admin_criterioevaluacion_edit', { 'id': criterioEvaluacion.id }) }}"><i class="fa fa-pencil"></i> Editar</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Eliminar</button>
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>

</div>
{% endblock %}
