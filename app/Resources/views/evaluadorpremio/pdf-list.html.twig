{% extends '::base-pdf.html.twig' %}

{% block body %}
    <h3 class="text-center"><i class="fa fa-user"></i> EVALUADORES</h3>
	<h5 class="text-center">({{ premioActual }})</h5>

	{% set haserrors = hasErrors(filterForm) %}
    {% if not haserrors and filterForm is filtered %}
        <div class="alert alert-info">
            <i class="fa fa-filter"></i> <strong>Filtros aplicados</strong>
            {{ renderAppliedFilters(filterForm) }}
        </div>
    {% endif %}
    
	{% include ':evaluadorpremio:list.html.twig' with { 'esPdf': true } %}

    <br>
    <strong>{{evaluadorPremios|length}}</strong>&nbsp;Resultado{{ evaluadorPremios|length == 1 ? '' : 's' }}.
{% endblock %}