{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title main-title">{{ edit_form.vars.value }}</h3>
        </div>
        <div class="panel-body">
        {% include ':evaluadorpremio:form.html.twig' with { 'form': edit_form } %}
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
    <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('admin_evaluadorpremio_index') }}"><i class="fa fa-chevron-left"></i> Volver a la Lista</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <button class="btn btn-danger" type="submit" value="Delete"><i class="fa fa-trash"></i> Eliminar</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {% endif %}
</div>
{% endblock %}

{% block page_javascripts %}
    {% include ':evaluador:form-javascripts.html.twig' with { 'form': edit_form.evaluador } %}
{% endblock %}