<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
		body {
			margin: 0;
			padding: 0;
			font-size: 0.75em;
			font-family: Arial, Helvetica, sans-serif;
		}
		.img-footer {
			height: 1.3cm;
			width: auto;
			display: inline-block;
		}
		hr {
			margin: 0;
		}
		table {
			width: 100%;
		}
		td.derecha, th.derecha {
			text-align: right;
		} 
	</style>
    <script>
        function subst() {
            var vars = {};
            var x = document.location.search.substring(1).split('&');
            for (var i in x) {
                var z = x[i].split('=', 2);
                vars[z[0]] = unescape(z[1]);
            }
            var x = ['frompage', 'topage', 'page', 'webpage', 'section', 'subsection', 'subsubsection'];
            for (var i in x) {
                var y = document.getElementsByClassName(x[i]);
                for (var j = 0; j < y.length; ++j) y[j].textContent = vars[x[i]];
            }
        }
    </script>
</head>
<body style="border:0; margin: 0;" onload="subst()">
	<hr>
	<table>
		<tbody>
			<tr>
				<td>
					Fecha - Hora de imp: {{ 'now'|date('d/m/Y - h:m') }}
				</td>
				<td class="derecha">
					p√°g. <span class="page"></span> de <span class="topage"></span>
				</td>
			</tr>
		</tbody>
	</table>
</body>
</html>
