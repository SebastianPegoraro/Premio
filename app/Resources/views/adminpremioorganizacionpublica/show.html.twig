{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title main-title">Organización Pública: {{ organizacionPublica }}</h3>
                </div>
                <div class="panel-body">
                    {% include ':organizacionpublica:show-info.html.twig' %}
